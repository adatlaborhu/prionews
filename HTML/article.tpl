<article class="news color%COLOR%">
    <div class="news-data">
        <header class="th">
            <div class="td portal">portal</div>
            <div class="td validity">validity</div>
            <div class="td spacer"></div>
            <div class="td longdate">date</div>
        </header>
        <div class="winner">
            <section class="tr">
                <div class="td portal">%PORTAL1%</div>
                <div class="td validity">%VALIDITY1%</div>
                <div class="td spacer"></div>
                <div class="td longdate">%DATE1%</div>
            </section>
            <h3 class="winner-title"><a href="%LINK1%" target="_blank">%TITLE1%</a></h3>
        </div>
        <section class="tr others">
            <div class="td portal">%PORTAL2%</div>
            <div class="td validity">%VALIDITY2%</div>
            <div class="td title"><a href="%LINK2%" target="_blank">%TITLE2%</a></div>
            <div class="td date">%DATE2%</div>
        </section>
        <section class="tr others">
            <div class="td portal">%PORTAL3%</div>
            <div class="td validity">%VALIDITY3%</div>
            <div class="td title"><a href="%LINK3%" target="_blank">%TITLE3%</a></div>
            <div class="td date">%DATE3%</div>
        </section>
        <!-- empty rows -->
        <section class="tr others" style="color:gray;">
            <div class="td portal">---</div>
            <div class="td validity">10.00%</div>
            <div class="td title">No data so far</div>
            <div class="td date">00/01/2013</div>
        </section>
        <section class="tr others" style="color:gray;">
            <div class="td portal">---</div>
            <div class="td validity">10.00%</div>
            <div class="td title">No data so far</div>
            <div class="td date">00/01/2013</div>
        </section>
    </div>
    <figure>
        <img src="%THUMB%" width="279" height="279" title="%TITLE1%" alt="%TITLE1%"/>
    </figure>
    <div class="clearfix"></div>
</article>

